@inherits Umbraco.Web.Mvc.UmbracoTemplatePage<ContentModels.ProjectsItem>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
	Layout = "Master.cshtml";
	var image = Umbraco.Media(CurrentPage.image);
}

<div class="project-main">
	<div class="message-board">
		<h1>@Umbraco.Field("projectTitle")</h1>
	</div>
	@if(image != null){
		<div class="project-img">
			<img src="@image.Url" alt="@image.UrlName" />
		</div>
	}
	<div class="project-content">
		@Umbraco.Field("projectContent")
	</div>
</div>